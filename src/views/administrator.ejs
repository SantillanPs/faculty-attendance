<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HR Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
      .glass-card {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.125);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
      }
    </style>
  </head>
  <body
    class="bg-gradient-to-br from-blue-50 via-white to-blue-50 min-h-screen flex items-center justify-center p-4"
  >
    <div class="container mx-auto max-w-6xl">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Profile Section -->
        <div class="md:col-span-1 space-y-6">
          <div class="glass-card p-6 text-center">
            <img
              src="/img/admin.jpg"
              alt="Profile"
              class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-white shadow-lg"
            />
            <h2 class="text-2xl font-bold text-gray-800">HR Manager</h2>
            <p class="text-blue-600 font-medium">Human Resources</p>

            <div class="mt-6 bg-blue-50 rounded-lg p-4">
              <div
                id="currentTime"
                class="text-3xl font-bold text-blue-700 mb-2"
              ></div>
              <div class="flex space-x-2">
                <button
                  class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition"
                >
                  Add Employee
                </button>
                <button
                  class="w-full bg-green-600 text-white py-3 rounded-lg hover:bg-green-700 transition"
                >
                  Generate Report
                </button>
              </div>
            </div>
          </div>

          <!-- Quick Stats Card -->
          <div class="glass-card p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">HR Overview</h3>
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <i class="fas fa-users text-blue-600 mr-3"></i>
                  <span>Total Employees</span>
                </div>
                <span class="font-bold text-gray-800">125</span>
              </div>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <i class="fas fa-calendar-check text-green-600 mr-3"></i>
                  <span>On Leave Today</span>
                </div>
                <span class="font-bold text-gray-800">8</span>
              </div>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <i class="fas fa-user-clock text-purple-600 mr-3"></i>
                  <span>Late Arrivals</span>
                </div>
                <span class="font-bold text-gray-800">5</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content Section -->
        <div class="md:col-span-2 space-y-6">
          <!-- Employee Directory -->
          <div class="glass-card p-6">
            <div class="flex justify-between items-center mb-6">
              <h2 class="text-2xl font-bold text-gray-800">
                Employee Directory
              </h2>
              <input
                type="text"
                placeholder="Search employees..."
                class="p-2 border rounded text-gray-700"
              />
            </div>

            <div class="overflow-x-auto">
              <table class="w-full">
                <thead>
                  <tr class="bg-gray-100 text-gray-600">
                    <th class="py-2 px-4 text-left">Name</th>
                    <th class="py-2 px-4 text-left">Role</th>
                    <th class="py-2 px-4 text-left">Department</th>
                    <th class="py-2 px-4 text-left">Contact</th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="border-b">
                    <td class="py-3 px-4">John Doe</td>
                    <td class="py-3 px-4">Software Engineer</td>
                    <td class="py-3 px-4">IT</td>
                    <td class="py-3 px-4">john.doe@example.com</td>
                  </tr>
                  <tr class="border-b">
                    <td class="py-3 px-4">Jane Smith</td>
                    <td class="py-3 px-4">HR Manager</td>
                    <td class="py-3 px-4">HR</td>
                    <td class="py-3 px-4">jane.smith@example.com</td>
                  </tr>
                  <!-- Add more rows dynamically -->
                </tbody>
              </table>
            </div>
          </div>

          <!-- Leave Requests Section -->
          <div class="glass-card p-6">
            <div class="flex justify-between items-center mb-6">
              <h2 class="text-2xl font-bold text-gray-800">
                Pending Leave Requests
              </h2>
              <input
                type="text"
                placeholder="Search by name..."
                class="p-2 border rounded text-gray-700"
              />
            </div>

            <div
              id="leaveRequestsContainer"
              class="space-y-4 max-h-64 overflow-y-auto"
            >
              <!-- Leave Request Items Will Be Dynamically Populated Here -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      // Sample Leave Requests Data
      const leaveRequests = [
        {
          id: 1,
          name: "Dr. Emily Roberts",
          type: "Sick Leave",
          duration: "2 Days",
          startDate: "2024-02-15",
          endDate: "2024-02-16",
          reason:
            "Experiencing flu-like symptoms and need to recover. Doctor's recommendation is to rest for two days.",
          status: "Pending",
        },
        {
          id: 2,
          name: "Prof. Michael Rodriguez",
          type: "Academic Leave",
          duration: "3 Days",
          startDate: "2024-03-01",
          endDate: "2024-03-03",
          reason:
            "Attending an international conference on computer science research in Berlin. Will present research paper.",
          status: "Pending",
        },
      ];

      // Function to render leave requests
      function renderLeaveRequests() {
        const container = document.getElementById("leaveRequestsContainer");
        container.innerHTML = "";

        leaveRequests.forEach((request) => {
          const requestElement = document.createElement("div");
          requestElement.classList.add("leave-request-card", "p-4");

          requestElement.innerHTML = `
            <div class="flex justify-between items-start">
              <div>
                <h3 class="font-semibold text-lg">${request.name}</h3>
                <p class="text-sm text-gray-600 mb-2">
                  ${request.type} - ${request.duration}
                </p>
                <div class="bg-white p-3 rounded-lg mb-3">
                  <p class="text-gray-700 font-medium mb-1">Reason:</p>
                  <p class="text-gray-600">${request.reason}</p>
                </div>
                <p class="text-sm text-gray-500">
                  From: ${request.startDate} | To: ${request.endDate}
                </p>
              </div>
              <div class="flex flex-col space-y-2">
                <button onclick="approveLeave(${request.id})" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
                  Approve
                </button>
                <button onclick="rejectLeave(${request.id})" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
                  Reject
                </button>
              </div>
            </div>
          `;
          container.appendChild(requestElement);
        });
      }

      // Functions to handle leave approval/rejection
      function approveLeave(id) {
        const request = leaveRequests.find((req) => req.id === id);
        if (request) {
          request.status = "Approved";
          renderLeaveRequests();
        }
      }

      function rejectLeave(id) {
        const request = leaveRequests.find((req) => req.id === id);
        if (request) {
          request.status = "Rejected";
          renderLeaveRequests();
        }
      }

      // Initial render
      renderLeaveRequests();
    </script>
  </body>
</html>
