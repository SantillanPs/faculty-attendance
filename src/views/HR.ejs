<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HR Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
      .glass-card {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.125);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
      }
    </style>
  </head>
  <body
    class="bg-gradient-to-br from-blue-50 via-white to-blue-50 min-h-screen flex items-center justify-center p-4"
  >
    <div class="container mx-auto max-w-6xl">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Profile Section -->
        <div class="md:col-span-1 space-y-6">
          <div class="glass-card p-6 text-center">
            <img
              src="/img/admin.jpg"
              alt="Profile"
              class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-white shadow-lg"
            />
            <h2 class="text-2xl font-bold text-gray-800">HR Manager</h2>
            <p class="text-blue-600 font-medium">Human Resources</p>

            <div class="mt-6 bg-blue-50 rounded-lg p-4">
              <div
                id="currentTime"
                class="text-3xl font-bold text-blue-700 mb-2"
              ></div>
              <div class="flex space-x-2">
                <a class="w-full" href="/form">
                  <button
                    class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition"
                  >
                    Add Employee
                  </button>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content Section -->
        <div class="md:col-span-2 space-y-6">
          <!-- Employee Directory -->
          <div class="glass-card p-6">
            <div class="flex justify-between items-center mb-6">
              <h2 class="text-2xl font-bold text-gray-800">
                Employee Directory
              </h2>
              <input
                type="text"
                id="employeeSearch"
                placeholder="Search employees..."
                class="p-2 border rounded text-gray-700"
              />
            </div>

            <div class="overflow-x-auto">
              <table id="employeeDirectory" class="w-full">
                <thead>
                  <tr class="bg-gray-100 text-gray-600">
                    <th class="py-2 px-4 text-left">Name</th>
                    <th class="py-2 px-4 text-left">Role</th>
                    <th class="py-2 px-4 text-left">Department</th>
                    <th class="py-2 px-4 text-left">Contact</th>
                  </tr>
                </thead>
                <tbody>
                  <!-- Rows will be dynamically populated here -->
                </tbody>
              </table>
            </div>
          </div>

          <div class="glass-card p-6">
            <div class="flex justify-between items-center mb-6">
              <h2 class="text-2xl font-bold text-gray-800">
                Pending Leave Requests
              </h2>
              <input
                type="text"
                id="leaveSearch"
                placeholder="Search by name..."
                class="p-2 border rounded text-gray-700"
              />
            </div>

            <div
              id="leaveRequestsContainer"
              class="space-y-4 max-h-64 overflow-y-auto"
            >
              <!-- Leave Request Items Will Be Dynamically Populated Here -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/hr.js"></script>
  </body>
</html>
